<!-- メインコンテンツ -->
<main class="ly_main">
  <div class="ly_card_article">
    <div class="bl_maintitle">
      <h1 class="el_lv1hedding">
        編集する
      </h1>
    </div><!-- /bl_maintitle -->

    <!-- タスクカード -->
    <%= form_tag("/tasks/#{task.id}/update") do %>
      <!-- 白ベタ全体 -->
      <div class="ly_card_wrapper">
        <% task.errors.values.flatten.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <!-- テキスト入力エリア -->
        <div class="el_input_form">
          <textarea name="content" style="width: 100%; height: 100%;"><%= task.content %></textarea>
        </div><!-- /el_input_form -->

        <!-- 保存ボタン -->
        <div class="bl_save__btn">
          <input type="submit" value="保存" class="save__btn_radius">
        </div><!-- /bl_save__btn -->
      </div><!-- /ly_card_wrapper -->
    <% end %>
  </div><!-- ly_card_article -->
</main><!-- /ly_main -- >


